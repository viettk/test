ArrayList<Nhanvien> lstt = new ArrayList<>();
    ArrayList<book> list = new ArrayList<>();
  
int index;
    DefaultTableModel model;
    
    public ArrayList<Nhanvien> lst()
    {
        lstt.clear();
        try {
            Class.forName("com.microsoft.sqlserver.jdbc.SQLServerDriver");
        String url="jdbc:sqlserver://127.0.0.1;user=sa;password=123;Database=DK_Agile";
            Connection con =DriverManager.getConnection(url);
            String sql="select * from nv";
            Statement st = con.createStatement();
            ResultSet rs = st.executeQuery(sql);
            while(rs.next())
            {
                Nhanvien nv = new Nhanvien(rs.getString(1), rs.getString(2), rs.getString(3), rs.getString(4), rs.getString(5), rs.getString(6), rs.getString(7), rs.getString(8));
                lstt.add(nv);
            }     
            con.close();
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, e);
        }
        return lstt;
    }
    public void fill()
    {
        ArrayList<Nhanvien> lst=lst(); 
        model=(DefaultTableModel)tbl.getModel();
        for(Nhanvien x:lst)
        {
            model.addRow(new Object[]{x.id,x.name,x.tuoi,x.gt,x.taik,x.password,x.chucvu,x.hlam});
            
        }
        tbl.setModel(model);
    }
    
    public ArrayList<book> LoadData() {

        try {
            Class.forName("com.microsoft.sqlserver.jdbc.SQLServerDriver");
        String url="jdbc:sqlserver://127.0.0.1;user=sa;password=123;Database=form_nvk";
            Connection con =DriverManager.getConnection(url);
            String query = "select * from sach";
            PreparedStatement ps = con.prepareStatement(query);
            ResultSet rs = ps.executeQuery();
            list.clear();
            while (rs.next()) {
                String masach = rs.getString(1);
                String tensach = rs.getString(2);
                String theloai = rs.getString(3);
                int sl = rs.getInt(4);
                double gia = rs.getDouble(5);
                String ngay=rs.getString(6);
                book b = new book(masach, tensach, theloai, sl, gia, ngay);
                list.add(b);
            }
            con.close();
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, e);
        }
        return list;
    }

    public void fillToTable() {
        ArrayList<book> list = LoadData();
        model=(DefaultTableModel)tbl1.getModel();
        model.setRowCount(0);
        for (book b : list) {
            model.addRow(new Object[]{b.getMasach(), b.getTensach(), b.getTheloai(), b.getSl(), b.getGia(), b.getNgay()});
        }
        tbl1.setModel(model);
    }
    public void filtersach()
    {
        ArrayList<book> list = slst();
        model.setRowCount(0);
        for (book b : list) {
            model.addRow(new Object[]{b.getMasach(), b.getTensach(), b.getTheloai(), b.getSl(), b.getGia(), b.getNgay()});
        }
        tbl1.setModel(model);
    }
    ArrayList<book> slst = new ArrayList<>();
    public ArrayList<book> slst()
    {
                try {
            java.util.Date utilStartDate = sach1.getDate();
            java.util.Date utilStartDate2 = sach2.getDate();
            java.sql.Date sqlStartDate = new java.sql.Date(utilStartDate.getTime());
            java.sql.Date sqlStartDate2 = new java.sql.Date(utilStartDate2.getTime());
            Class.forName("com.microsoft.sqlserver.jdbc.SQLServerDriver");
            String url="jdbc:sqlserver://127.0.0.1:1433;user=sa;password=123;Database=form_nvk";
            Connection con = DriverManager.getConnection(url);
            String sql="select * from sach where ngaynhap between ? and ?";
            PreparedStatement pst = con.prepareStatement(sql);
            pst.setDate(1, sqlStartDate);
            pst.setDate(2, sqlStartDate2);
            ResultSet rs = pst.executeQuery();
            while(rs.next())
            {
                book b = new book(rs.getString(1), rs.getString(2), rs.getString(3), rs.getInt(4), rs.getDouble(5), rs.getString(6));
                slst.add(b);
            }
            tbl1.setModel(model);
            con.close();
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, e);
        }
        return slst;
    }
