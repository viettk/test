    private void maKeyReleased(java.awt.event.KeyEvent evt) {                               
String filter =ma.getText();
TableRowSorter tr = new TableRowSorter(model);
tbl.setRowSorter(tr);
tr.setRowFilter(RowFilter.regexFilter(filter));        // TODO add your handling code here:
    }                              

    private void masaKeyReleased(java.awt.event.KeyEvent evt) {                                 
String filter =masa.getText();
TableRowSorter tr = new TableRowSorter(model);
tbl1.setRowSorter(tr);
tr.setRowFilter(RowFilter.regexFilter(filter));        // TODO add your handling code here:
    }                                

